@using OnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
	ViewBag.Title = "FaturaDetay";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Fatura Kalem Detayları</li>
</ol>
<table class="table table-hover">
	<tr>
		<th>Fatura Kalem ID</th>
		<th>Açıklama</th>
		<th>Miktar</th>
		<th>Birim Fiyat</th>
		<th>Tutar</th>
	</tr>
	@foreach (var m in Model)
	{
		<tr>
			<td>@m.FaturaKalemID</td>
			<td>@m.Aciklama</td>
			<td>@m.Miktar</td>
			<td>@m.BirimFiyat</td>
			<td>@m.Tutar</td>

		</tr>
	}
</table>

<th><a href="/Fatura/YeniKalem/" class="btn btn-primary"><i class="fa fa-plus"></i> Yeni Kalem Ekle</a></th>
