@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
	ViewBag.Title = "DepartmanPersonelSatis";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satış</h2>
<br />

<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Personel Adı:  @ViewBag.personel</li>
</ol>


<table class="table table-hover">
	<tr>
		<th>Cari</th>
		<th>Ürün</th>
		<th>Fiyat</th>
		<th>Adet</th>
		<th>Toplam Tutar</th>
		<th>Tarih</th>
		<th>Yazdır</th>
	</tr>
	@foreach (var m in Model)
	{
		<tr>
			<td>@m.Cariler.CariAd @m.Cariler.CariSoyad</td>
			<td>@m.Urun.UrunAd</td>
			<td>@m.Fiyat ₺</td>
			<td>@m.Adet</td>
			<td>@m.ToplamTutar ₺</td>
			<td>@m.Tarih.ToShortDateString()</td>
			<td><a href="#" class="btn btn-default" style="background-color :cornsilk">Yazdır</a></td>
		</tr>
	}
</table>

