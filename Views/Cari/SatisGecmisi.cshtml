@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
	ViewBag.Title = "SatisGecmisi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Müşteri Satış Geçmişi</h2>
<br />
<ol class="breadcrumb mb-4">
	<li class="breadcrumb-item active">Müşteri Adı: @ViewBag.cari</li>
</ol>

<table class="table table-hover">
	<tr>
		
		<th>Personel</th>
		<th>Ürün</th>
		<th>Adet</th>
		<th>Fiyat</th>
		<th>Toplam Tutar</th>
		<th>Tarih</th>
		<th>Yazdır</th>


	</tr>
	@foreach (var m in Model)
	{
		<tr>
			
			<td>@m.Personel.PersonelAd @m.Personel.PersonelSoyad</td>
			<td>@m.Urun.UrunAd</td>
			<td>@m.Adet</td>
			<td>@m.Fiyat</td>
			<td>@m.ToplamTutar</td>
			<td>@m.Tarih.ToShortDateString()</td>
			<td><a href="#" class="btn btn-default" style="background-color: cornsilk">Yazdır</a></td>
		</tr>
	}
</table>


